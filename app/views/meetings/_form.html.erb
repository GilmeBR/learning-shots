
<%= simple_form_for @meeting do |f| %>
<%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :start_time, as: :string, input_html:{ data: { controller: 'flatpickr' } } %>
  <%= f.input :end_time, as: :string, input_html: { data: { controller: 'flatpickr' }} %>

<%= f.input :trail_id, collection: @trails, value_method: :id, label: "Select a Trail" ,include_blank: false %>
<%= f.submit 'Agende seu horário' %>

<% end %>

<% if meeting.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(meeting.errors.count, "error") %> proibiu esta reunião de ser salva:</h2>
    <ul>
      <% meeting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
