    <%= date.to_formatted_s(:short) %>

    <% meetings.each do |meeting| %>
      <div class="meeting">
        <p><%= link_to meeting.trail.title, trail_path(meeting.trail) %></p>
        <%= link_to meeting_path(meeting),method: :delete, data:{turbo_method:"delete"} do  %>
        <i class="fa-solid fa-trash"></i>
        <%end %>
        <%= link_to edit_meeting_path(meeting), method: :get, title: "Editar reuniÃ£o" do %>
        <i class="fa-solid fa-pencil"></i>
        <%end %>
        <small><%= meeting.time unless meeting.multi_days? %></small>
      </div>
    <% end %>
  <% end %>
