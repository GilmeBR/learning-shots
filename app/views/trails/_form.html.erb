<div class="container-forms d-flex justify-content-center mt-5">

  <%= simple_form_for(@trail) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :photo, as: :file, label: "Pick up an image as your Trail's cover" %>
      <%= f.input :title, label: "Insert your Trail's title:"  %>
      <%= f.input :description, label: "You can also define a description to your Trail:" %>
      <%= f.input :category, label: "Which category better fits with your Trail content?", collection: Trail::CATEGORIES.map { |category| category.capitalize } %>
    </div>

    <div class="form-actions row d-flex justify-content-between">
      <div class="col text-center">
      <%= link_to "Go back!", @trail, class: "btn btn-primary" %>
      </div>
      <div class="col text-center">
      <%= f.button :submit, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

</div>

