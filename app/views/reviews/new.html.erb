<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for([@trail, @review], data: { controller: "form-submit", form_submit_target: "stars" }) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: { controller: "star-rating", action: "click->form-submit#envia"} }  %>
        <%= f.submit "Submit" %>
      <% end %>
    </div>
  </div>
</div>
